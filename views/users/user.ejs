<link rel='stylesheet' href='/stylesheets/style.css' />
<link rel='stylesheet' href='/stylesheets/equipment.css' />
<!DOCTYPE html>
<html>

<head>
    <title>อุปกรณ์</title>

</head>

<body class="body">
    <%- include("../navbar") %>

        <div class="container">
            <h1>อุปกรณ์</h1>
            <h5>กรุณาตรวจสอบข้อมูลให้ถูกต้องก่อนทำการแจ้งข้อมูล</h5>
            <div class="row">

                <div class="container mt-3 col-md-offset-1">

                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h3 class="panel-title">รายการอุปกรณ์</h3>
                                </div>

                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                    <tr>

                                        <th>#</th>
                                        <th>รูปอุปกรณ์</th>
                                        <th>ยี่ห้ออุปกรณ์</th>
                                        <th>รายละเอียดอุปกรณ์</th>
                                        <th>จำนวน</th>
                                        <th>ราคา</th>
                                        <th><em class="fa fa-cog"></em></th>


                                    </tr>
                                </thead>
                                <% Object.values(result_eq).forEach(function(result_eqs){%>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%= result_eqs.Equipment_id %>
                                            </td>
                                            <td>
                                                <img src="/Eqimage/<%= result_eqs.Eq_image %>" width="100" height="auto" class="img-fluid" />
                                            </td>
                                            <td>
                                                <%= result_eqs.Equipment_name %>
                                            </td>
                                            <td>
                                                <%= result_eqs.Device_details %>
                                            </td>
                                            <td>
                                                <%= result_eqs.Equipmentnum %>
                                            </td>
                                            <td>
                                                <%= result_eqs.Price %> บาท
                                            </td>
                                            <td>
                                                <a type="button " class="btn btn-warning " href="/users/notify_repair/s/<%= result_eqs.Equipment_id %>">แจ้งซ่อม    <%= result_eqs.Equipment_id %></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <%})%>
                            </table>

                        </div>

                    </div>

                </div>
            </div>
        </div>

</body>

</html>